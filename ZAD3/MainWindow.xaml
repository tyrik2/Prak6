<Window x:Class="ZAD3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZAD3"
        mc:Ignorable="d"
        Title="TriangleP" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Label Content="Основание a:" Margin="0,0,5,0"/>
            <TextBox x:Name="tbA" Width="100"/>
            <Label Content="Высота h:" Margin="10,0,5,0"/>
            <TextBox x:Name="tbH" Width="100"/>
            <Button x:Name="btnCalculate" Content="Вычислить" Margin="10,0,0,0" Click="btnCalculate_Click"/>
        </StackPanel>
        <ListBox x:Name="lbResults" Grid.Row="1" Margin="10"/>
    </Grid>
</Window>
